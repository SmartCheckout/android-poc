<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:id="@+id/cartItem">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:src="@drawable/imageholder"
        android:padding="2dp"
        android:id="@+id/itemImg"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="95dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productTile"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="Product Tile"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productDesc"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:textStyle="italic"
        android:fontFamily="monospace"
        android:text="Short Desciption of the product"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Qty"
                android:textColor="#A9A9A9"
                android:fontFamily="monospace"
                android:textSize="12dp"/>
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quantityPicker">
            </NumberPicker>
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/delete_icon"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sellingPrice"
            android:text="$25"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Saved : $2.75"
            android:id="@+id/itemSavings"/>
    </LinearLayout>


    </LinearLayout>

