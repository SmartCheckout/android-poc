<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select store to start shopping"
        android:textColor="@color/colorPrimaryDark"
        android:padding="10dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/locateMe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/locate_me"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/scanStoreQR"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:adjustViewBounds ="true"
            android:scaleType="centerInside"

            android:src="@drawable/qr_code"/>
    </LinearLayout>

    <ProgressBar
        android:layout_margin="10dp"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:id="@+id/progressBar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/locationConfimation"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/storeStatus"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/confirmLocationBtn"/>
</LinearLayout>

</LinearLayout>